{
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "name": "CloudSpokes",
  "version": "1.0",
  "description": "Quick and handy access to the latest CloudSpokes challenges, your payments, leaderboards and more!",
  "browser_action": {
    "default_icon": "icon.png",
		"default_title": "CloudSpokes",
		"default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://www.cloudspokes.com/*",
	"http://api.cloudspokes.com/v1/*",
	"http://feeds.feedburner.com/*"
  ],
	"icons": { "16": "icon16.png",
	           "48": "icon48.png",
	          "128": "icon128.png" }
}